{
    "version": "0.2.0",
    "configurations": [
        
        // --- Add this configuration ---
        {
            "name": "PowerShell: Launch Current File", // The name VS Code is looking for
            "type": "PowerShell",                     // Specifies the debugger type
            "request": "launch",                      // Indicates we want to start a new process
            "script": "${file}",                      // VS Code variable for the currently active file in the editor
            "cwd": "${fileDirname}",                  // Sets the working directory to the directory of the current file
            "createTemporaryIntegratedConsole": true  // Optional: Creates a new terminal for each debug session
        }
        // --- End of added configuration ---

        // You might have other configurations here already
    ]
}